#include <fcntl.h>
#include "get_next_line.h"
#include "libft/libft.h"

int main(int ac, char **av)
{
	int fd = open(av[1], O_RDONLY);
	char *str;
	int ret;
	ac = 3;
	fd = 0;
//	ret = get_next_line(fd, &str);
	while ((ret = get_next_line(0, &str)) > 0)
	{
		ft_putendl(str);
		ft_putnbr(ret);
		ft_putchar('\n');
	}
/*	ft_putendl(str);
	ft_putnbr(ret);
	ft_strclr(str);
	char *str2;
	ret = get_next_line(fd, &str2);*/
	ft_putendl(str);
	ft_putnbr(ret);
	ft_putchar('\n');
	return (0);
}
